<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xa002.Pages.GridLayoutPage">
    <ContentPage.Content>
		<Grid ColumnSpacing="20" RowSpacing="50">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="20"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Label Grid.Row="0" Grid.Column="0" HeightRequest="50" Text="(0,0)" BackgroundColor="Red"/>
			<Label Grid.Row="0" Grid.Column="1" Text="(0,0)" BackgroundColor="Orange"/>
			<Label Grid.Row="1" Grid.Column="0" Text="(0,0)" BackgroundColor="Yellow"/>
			<Label Grid.Row="1" Grid.Column="1" Text="(0,0)" BackgroundColor="Green"/>
			<Label Grid.Row="2" Grid.Column="0" Text="(0,0)" BackgroundColor="Blue"/>
			<Label Grid.Row="2" Grid.Column="1" Text="(0,0)" BackgroundColor="Purple"/>
		</Grid>
    </ContentPage.Content>
</ContentPage>